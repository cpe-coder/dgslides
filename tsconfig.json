{
   "extends": "expo/tsconfig.base",
   "compilerOptions": {
      "strict": true,
      "paths": {
         "@/*": ["./*"],
         "@components/*": ["./components/*"],
         "@screens/*": ["./screens/*"],
         "@navigation/*": ["./navigation/*"],
         "@types/*": ["./types/*"],
         "@constants/*": ["./constants/*"],
         "@utils/*": ["./utils/*"]
      }
   },
   "include": [
      "**/*.ts",
      "**/*.tsx",
      ".expo/types/**/*.ts",
      "expo-env.d.ts",
      "nativewind-env.d.ts"
   ]
}
